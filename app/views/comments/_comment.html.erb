<% unless comment.archived? %>
    <p>
        <strong>Commenter:</strong>
        <%= comment.commenter %>
    </p>

    <p> 
        <strong>Comment:</strong>
        <%= comment.content %> 
    </p>

    <% if current_user && comment.article.user_id == current_user.id %>
        <p>
            <%= link_to 'Delete Comment', [comment.article, comment], data:{
                turbo_method: :delete,
                turbo_confirm: 'Are you sure?'
            }%>
        </p>
    <%end%>
<%end%>
